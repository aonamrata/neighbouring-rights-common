{
    "compilerOptions": {
        "outDir": "dist",
        "baseUrl": ".",
        "module": "commonjs",
        "strict": true,
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "Node",
        "esModuleInterop": true,
        "target": "es2019",
        "resolveJsonModule": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "lib": [
            "es2019",
            "dom"
        ],
        "paths": {
            "lib/*": [
                "./lib/*"
            ],
        }
    },
    "include": [
        "lib/**/*",
    ],
    "exclude": [
        "node_modules",
        "dist",
        "build"
    ]
}
