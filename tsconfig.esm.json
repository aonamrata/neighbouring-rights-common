{
    "compilerOptions": {
        "incremental": true,
        "composite": true,
        "target": "ES2018",
        "module": "ES2020",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "strict": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "experimentalDecorators": true,
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "skipLibCheck": true,
        "jsx": "react",
        "lib": [
            "DOM",
            "ES2019"
        ],
        "baseUrl": ".",
        "outDir": "./dist/esm"

    },
    "exclude": [
        "node_modules",
        "./lib/**/__tests__/*",
    ],
    "include": [
        "./lib"
    ],
}
